<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context="com.travel.personaltravel.activity.PlanDetailActivity">
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/plan_detail_backimg"
            android:scaleType="centerCrop"
            android:src="@drawable/common_icon_navigationback_default"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
                android:id="@+id/plan_detail_title"
                android:textAlignment="center"

                android:textSize="18sp"
                />
        <ImageView
            android:id="@+id/plan_detail_mapimg"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:src="@drawable/plan_02_dashboard_map"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/plan_detail_setimg"
            android:scaleType="centerCrop"
            android:src="@drawable/common_icon_navigation_menu_highlight"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <View
        android:layout_marginBottom="5dp"
        android:background="#6aaa"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        ></View>
<RadioGroup
    android:id="@+id/plan_detail_radiogroup"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RadioButton
        android:background="@drawable/selector_plan"
        android:textColor="@color/plan_selector_color"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:button="@null"
        android:text="行程"
        android:textSize="14sp"
        android:checked="true"
        android:gravity="center"
        android:id="@+id/plan_detail_route"
        />
    <RadioButton
        android:gravity="center"
        android:textSize="14sp"
        android:background="@drawable/selector_plan"
        android:textColor="@color/plan_selector_color"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:button="@null"
        android:id="@+id/plan_detail_collect"
        android:text="收集"
        />
</RadioGroup>
    <View
        android:layout_marginTop="5dp"
        android:background="#6aaa"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        ></View>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plan_detaile_container"
        ></FrameLayout>
</LinearLayout>
