<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.travel.personaltravel.activity.trip.SpotItemActivity"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:text="返回"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <TextView
                android:layout_centerHorizontal="true"
                android:text="南"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <TextView
                android:layout_alignParentRight="true"
                android:text="聊天"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    >

                <android.support.v4.view.ViewPager
                        android:id="@+id/activity_spot_item_viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                <RadioGroup
                        android:layout_marginBottom="30dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        >
                </RadioGroup>
            </FrameLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                <FrameLayout
                        android:layout_margin="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    <Button
                            android:text="评价"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    <TextView
                            android:text="台湾大学"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                </FrameLayout>

                <TextView
                        android:text="内容"
                        android:maxLines="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                <TextView
                        android:text="地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_home_tab_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/activity_spot_item_address_icon"
                        />

                <TextView
                        android:text="23"
                        android:layout_toLeftOf="@id/activity_spot_item_address_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                <TextView
                        android:text="地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_home_tab_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/activity_spot_item_phone_icon"
                        />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                <TextView
                        android:text="费用"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_home_tab_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/activity_spot_item_pay_icon"
                        />

                <TextView
                        android:text="免费"
                        android:layout_toLeftOf="@id/activity_spot_item_pay_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                <TextView
                        android:text="开放"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_home_tab_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/activity_spot_item_open_icon"
                        />

                <TextView
                        android:text="全天"
                        android:layout_toLeftOf="@id/activity_spot_item_open_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
            </RelativeLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"
                    >

                <ImageView
                        android:layout_weight="1"
                        android:src="@mipmap/ic_home_tab_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />

                <ImageView
                        android:layout_weight="1"
                        android:src="@mipmap/ic_home_tab_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />

                <ImageView
                        android:layout_weight="1"
                        android:src="@mipmap/ic_home_tab_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
