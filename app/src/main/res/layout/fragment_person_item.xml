<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:id="@+id/person_item_img"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:singleLine="true"
            android:id="@+id/person_item_staytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            />
        <TextView

            android:id="@+id/person_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:ellipsize="end"
            android:singleLine="true"
            />
        <TextView
            android:singleLine="true"
            android:id="@+id/person_item_cityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            />
        <TextView
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:id="@+id/person_item_createtime"
            android:textSize="18sp"
            />

    </LinearLayout>
    <ImageButton
        android:background="#fff"
        android:layout_margin="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"

        />
    <Button
        android:id="@+id/person_item_delete"
        android:visibility="gone"
        android:text="删除"
        android:background="#FFBC50"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <Button
        android:id="@+id/person_item_cancel"
        android:visibility="gone"

        android:text="取消"
        android:background="#E17867"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</LinearLayout>