<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.travel.personaltravel.activity.trip.TravelNoteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#0b000000"
        android:padding="10dp">

        <TextView
            android:id="@+id/city_travel_note_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="全部游记"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/city_travel_note_top_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/go_back_button" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#88888888" />

    <ListView
        android:id="@+id/city_all_travel_note_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
