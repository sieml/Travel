<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
            android:id="@+id/item_fragment_more_city_foreign_country_detail_imageView"
            android:src="@mipmap/ic_home_tab_search"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <TextView
                android:text="13123"
                android:id="@+id/item_fragment_more_city_foreign_country_detail_textView"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                />
        <TextView
                android:id="@+id/item_fragment_more_city_foreign_country_detail_pinyin"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
    </LinearLayout>

</FrameLayout>