<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.travel.personaltravel.activity.trip.GridViewItemActivity"
        >



    <android.support.v4.view.ViewPager
            android:id="@+id/activity_grid_view_item_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    <TextView
            android:id="@+id/activity_grid_view_item_page"
            android:layout_margin="20dp"
            android:textColor="#fff"
            android:text="123"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    <TextView
            android:id="@+id/activity_grid_view_item_back"
            android:background="@mipmap/white_headback"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
</FrameLayout>
