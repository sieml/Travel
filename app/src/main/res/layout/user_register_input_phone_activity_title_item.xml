<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp">

    <ImageView
        android:id="@+id/l_register_title_bar_back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/home_page_title_bar_logo_padding_left"
        android:paddingRight="@dimen/cmm_title_bar_back_padding_right"
        android:paddingTop="@dimen/cmm_title_bar_back_padding_top"
        android:paddingBottom="@dimen/cmm_title_bar_back_padding_bottom"
        android:src="@mipmap/go_back_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/cmm_title_bar_back_padding_top"
        android:text="注册账号"
        android:textColor="#000000"
        android:textSize="@dimen/cmm_title_bar_title_txt_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#B2B2B2" />
</RelativeLayout>