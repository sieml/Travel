<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.travel.personaltravel.activity.trip.PersonDetailInfoActivity"
        >

    <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:layout_centerVertical="true"
                android:text="1231"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <TextView
                    android:text="旅行达人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            <TextView
                    android:text="id:20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

        </LinearLayout>

        <TextView
                android:layout_centerVertical="true"
                android:text="1231"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
    </RelativeLayout>

    <ScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    >

                <com.travel.personaltravel.widget.RoundImageView
                        android:id="@+id/activity_person_detail_info_UserPic"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_home_tab_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                <TextView
                        android:text="Red"
                        android:layout_margin="10dp"
                        android:id="@+id/activity_person_detail_info_userName"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/activity_person_detail_info_UserPic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                <TextView
                        android:text="12313"
                        android:layout_below="@id/activity_person_detail_info_userName"
                        android:id="@+id/activity_person_detail_info_userInfo"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                <LinearLayout
                        android:layout_margin="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/activity_person_detail_info_userInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                    <ImageView
                            android:src="@mipmap/ic_home_tab_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    <ImageView
                            android:src="@mipmap/ic_home_tab_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    <ImageView
                            android:src="@mipmap/ic_home_tab_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                            android:id="@+id/activity_person_detail_info_mark"
                            android:layout_margin="10dp"
                            android:src="@mipmap/ic_home_tab_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                <TextView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/activity_person_detail_info_mark"
                        android:text="旅行派达人资讯老师"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:text="达人标签"
                        android:layout_height="wrap_content"
                        />

            </RelativeLayout>

            <View
                    android:background="#3f3f3f"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    />

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    />

            <View
                    android:layout_width="match_parent"
                    android:background="#eee"
                    android:layout_height="15dp"
                    />
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ta的相册"
                        />
            </RelativeLayout>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>
