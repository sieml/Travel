<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.travel.personaltravel.activity.FoodGuideActivity">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >

                <TextView
                        android:id="@+id/food_title"
                        android:textSize="22sp"
                        android:textColor="#000"
                        android:layout_centerInParent="true"
                        android:text="美食攻略"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                <ImageButton
                        android:id="@+id/foodguide_back"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/common_icon_navigaiton_back_dark"
                        android:layout_alignParentLeft="true"
                        />


        </RelativeLayout>
        <View
                android:background="#88888888"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                />
        <ProgressBar
                android:id="@+id/food_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                />
        <WebView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/food_webView"
                />
</LinearLayout>
