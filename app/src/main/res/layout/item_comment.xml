<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp">

    <FrameLayout
        android:id="@+id/framlayout_warp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.travel.personaltravel.widget.RoundImageView
            android:id="@+id/item_comment_avatarSmall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:src="@mipmap/touxiang" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/king_head" />
    </FrameLayout>


    <TextView
        android:id="@+id/item_comment_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/framlayout_warp"
        android:text="老蒋"
        android:textColor="#5000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_comment_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_comment_nickname"
        android:layout_marginTop="10dp"
        android:textColor="#3000"
        android:layout_toRightOf="@id/framlayout_warp"
        android:text="杭州市" />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/level_bg" />

        <TextView
            android:id="@+id/item_comment_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="V0"
            android:textColor="#fff" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearlayout_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_comment_address"
        android:layout_toRightOf="@id/framlayout_warp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/item_comment_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/discover_game_btn"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="美食家"
            android:textColor="#fff"
            android:textSize="12dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_comment_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout_wrap"
        android:layout_toRightOf="@id/framlayout_warp"
        android:paddingRight="14dp"
        android:text="旅行派达人" />
</RelativeLayout>
