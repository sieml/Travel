<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.travel.personaltravel.activity.CityCommentTripActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/city_commenttrip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="北京"
            android:textColor="#000"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/city_commenttrip_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/go_back_button" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#88888888" />

    <RadioGroup
        android:id="@+id/city_commenttrip_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/city_commenttrip_r1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_plan"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="行程"
            android:textColor="@color/plan_selector_color"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/city_commenttrip_r2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_plan"
            android:button="@null"
            android:gravity="center"
            android:text="收集"
            android:textColor="@color/plan_selector_color"
            android:textSize="14sp" />
    </RadioGroup>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="10dp" />

    <FrameLayout
        android:id="@+id/city_commenttrip_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
