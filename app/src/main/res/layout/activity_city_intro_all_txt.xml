<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.travel.personaltravel.activity.CityIntroAllTxtActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sr_title_bar_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="backIv"
            android:paddingBottom="@dimen/cmm_title_bar_back_padding_bottom"
            android:paddingLeft="@dimen/home_page_title_bar_logo_padding_left"
            android:paddingRight="@dimen/cmm_title_bar_back_padding_right"
            android:paddingTop="@dimen/cmm_title_bar_back_padding_bottom"
            android:src="@mipmap/go_back_button" />

        <TextView
            android:id="@+id/search_history_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="城市简介"
            android:textColor="#000"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#56000000" />


    <TextView
        android:id="@+id/city_intro_txt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="三亚"
        android:textSize="15sp" />
</LinearLayout>
