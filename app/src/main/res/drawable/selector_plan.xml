<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:state_checked="true">
       <shape>
           <gradient android:startColor="#9ACC67" android:endColor="#00cc00"/>
           <stroke android:width="1dp"
               android:color="#9ACC67"
               />

           <padding android:left="10dp"
               android:top="5dp"
               android:bottom="5dp"
               android:right="10dp"/>
       </shape>
   </item>
    <item>
        <shape>
            <gradient android:endColor="#fff" android:startColor="#fff"></gradient>
            <stroke android:width="1dp"
                android:color="#9ACC67"
                />
            <padding android:left="10dp"
                android:top="5dp"
                android:bottom="5dp"
                android:right="10dp"/>
        </shape>
    </item>
</selector>